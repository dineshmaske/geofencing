<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.patterns7.geofencing.AddGeofencingActivity">

    <EditText
        android:id="@+id/textLatitude"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:editable="true"
        android:paddingLeft="10dp"
        android:hint="Latitude"
        android:textSize="20sp"
        android:singleLine="true"
        android:background="#ffffff"
        android:inputType="numberSigned"/>
    <EditText
        android:id="@+id/textLongitude"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:editable="true"
        android:paddingLeft="10dp"
        android:hint="Longitude"
        android:textSize="20sp"
        android:singleLine="true"
        android:background="#ffffff"
        android:layout_below="@id/textLatitude"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:editable="true"
        android:paddingLeft="10dp"
        android:hint="Name"
        android:textSize="20sp"
        android:singleLine="true"
        android:background="#ffffff"
        android:layout_below="@id/textLongitude"
        android:inputType="text"/>
    <EditText
        android:id="@+id/textAddress"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:editable="true"
        android:paddingLeft="10dp"
        android:hint="Address"
        android:textSize="20sp"
        android:singleLine="true"
        android:background="#ffffff"
        android:layout_below="@id/textName"
        android:inputType="text"/>
    <EditText
        android:id="@+id/textRedious"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:editable="true"
        android:paddingLeft="10dp"
        android:hint="Redious"
        android:textSize="20sp"
        android:singleLine="true"
        android:background="#ffffff"
        android:layout_below="@id/textAddress"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/authLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="16dip"
        android:layout_gravity="center"
        android:onClick="saveGeofence"
        android:layout_below="@id/textRedious"
        android:background="#a4c639"
        android:text="Save"
        android:textColor="#22B7D3"
        />

</RelativeLayout>
